<html>
  <head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/_reservationList.css" />
  </head>
  <body>
    <%- include('./partials/nav') %>
    <main>
      <section>
        <div class="container">
          <div class="form-container">
            <div class="form-title">
              <h1>Reservar veículo</h1>
            </div>
            <div class="form-body">
              <form>
                <div class="form-input-date-container">
                  <div class="form-input-date">
                    <label for="">Inicio da reserva: </label>
                    <input
                      type="datetime-local"
                      name="startDate"
                      id="startDate"
                      class="stateDate"
                    />
                  </div>
                  <div class="form-input-date">
                    <label for="">Fim da reserva: </label>
                    <input
                      type="datetime-local"
                      name="endDate"
                      id="endDate"
                      class="stateDate"
                    />
                  </div>
                </div>
                <div class="form-input-select-container">
                  <label for="vehicleSelect">Modelo: </label>
                  <select name="vehicleSelect" id="sel"></select>
                </div>
                <div class="form-input-select-values">
                  <div class="form-input-select-py" id="plate-container">
                    <label for="">Placa: </label>
                    <input type="text" name="plate" id="plate" />
                  </div>
                  <div class="form-input-select-py" id="year-container">
                    <label for="">Ano: </label>
                    <input type="text" name="year" id="year" />
                  </div>
                </div>
                <div class="form-input-button-container">
                  <div class="form-input-button">
                    <input type="text" value="ENVIAR" id="send" />
                  </div>
                  <div class="form-input-button">
                    <a href="/">CANCELAR</a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
  </body>
  <script>
    let urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('success') && urlParams.get('success')) {
      Swal.fire({
        title: 'Reserva provisória cadastrada!',
        icon: 'info',
        allowOutsideClick: false,
        allowEscapeKey: false,
        allowEnterKey: false,
        height: '450px',
        showConfirmButton: false,
        html:
          'As reservas ficam armazenadas na página de listagem.' +
          '<br />' +
          '<br />' +
          '<a class="redirect-btn" href="/listagem">' +
          'VER RESERVA' +
          '</a>',
        didOpen: (toast) => {
          toast.addEventListener('mouseenter', Swal.stopTimer);
          toast.addEventListener('mouseleave', Swal.resumeTimer);
        },
        timer: 4000,
        timerProgressBar: true,
      }).then(() => {
        console.log(window.location.hostname);
        window.location.replace(window.location.origin + '/reserva');
      });
    }
  </script>
  <script src="/scripts/reservationList.js"></script>
</html>
